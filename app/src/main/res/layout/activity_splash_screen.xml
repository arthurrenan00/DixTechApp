<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_100"
    tools:context=".SplashScreen">

    <ImageView
        android:id="@+id/imgsplash"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="280dp"
        android:contentDescription="@string/DescLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logobranca" />

    <TextView
        android:id="@+id/txtmadeby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:contentDescription="@string/DescMadeBy"
        android:fontFamily="@font/amiko"
        android:text="@string/madeby"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtsplashname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/DescLogo"
        android:fontFamily="@font/amiko"
        android:text="@string/app_name"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txtmadeby"
        app:layout_constraintStart_toStartOf="@+id/txtmadeby"
        app:layout_constraintTop_toBottomOf="@+id/txtmadeby" />
</androidx.constraintlayout.widget.ConstraintLayout>