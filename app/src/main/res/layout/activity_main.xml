<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/imglogohome"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/descLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logoazulfull" />

    <View
        android:id="@+id/containerUserhome"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/container_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imglogohome" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/descUser"
        android:src="@drawable/ic_user"
        app:layout_constraintBottom_toBottomOf="@+id/containerUserhome"
        app:layout_constraintEnd_toEndOf="@+id/containerUserhome"
        app:layout_constraintStart_toStartOf="@+id/containerUserhome"
        app:layout_constraintTop_toTopOf="@+id/containerUserhome" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="zdyfgkgdieef"
        android:textColor="@color/grey100"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/containerUserhome"
        app:layout_constraintTop_toTopOf="@+id/containerUserhome"
        app:layout_constraintBottom_toBottomOf="@+id/containerUserhome"
        />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarhome"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/imghome"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="15dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/descHome"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/toolbarhome"
        app:layout_constraintStart_toStartOf="@+id/toolbarhome"
        app:srcCompat="@drawable/home"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/imglinhahome"
        android:layout_width="40dp"
        android:layout_height="3dp"
        android:contentDescription="@string/descLinha"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imghome"
        app:layout_constraintStart_toStartOf="@+id/imghome"
        app:srcCompat="@drawable/linhabranca" />

    <ImageButton
        android:id="@+id/btnuserhome"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="15dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/descUser"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/usuario"
        tools:ignore="TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>