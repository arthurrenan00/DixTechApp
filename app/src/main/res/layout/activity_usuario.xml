<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Usuario">

    <ImageView
        android:id="@+id/imglogouser"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/descLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logoazulfull" />

    <View
        android:id="@+id/containerUser"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/container_user"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imglogouser"
        />

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/ic_user"
        android:contentDescription="@string/descUser"
        app:layout_constraintStart_toStartOf="@+id/containerUser"
        app:layout_constraintEnd_toEndOf="@+id/containerUser"
        app:layout_constraintTop_toTopOf="@+id/containerUser"
        app:layout_constraintBottom_toBottomOf="@+id/containerUser"
        />

    <ImageView
        android:id="@+id/iconeUser"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_user"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/descUser"
        app:layout_constraintTop_toBottomOf="@+id/containerUser"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/txtnmUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey100"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Giuyffhuf"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="@+id/iconeUser"
        app:layout_constraintBottom_toBottomOf="@+id/iconeUser"
        app:layout_constraintStart_toEndOf="@+id/iconeUser"
        />

    <ImageView
        android:id="@+id/iconeEmail"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_emailescuro"
        android:layout_marginTop="25dp"
        android:contentDescription="@string/descEmail"
        app:layout_constraintTop_toBottomOf="@+id/iconeUser"
        app:layout_constraintStart_toStartOf="@id/iconeUser"
        app:layout_constraintEnd_toEndOf="@id/iconeUser"
        />

    <TextView
        android:id="@+id/txtemailUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giuyffhuf"
        android:textColor="@color/grey100"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/iconeEmail"
        app:layout_constraintStart_toStartOf="@+id/txtnmUsuario"
        app:layout_constraintTop_toTopOf="@+id/iconeEmail" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@color/blue_100"
        android:padding="5dp"
        android:text="@string/deslogar"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iconeEmail" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbaruser"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/imguser"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="15dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/descUser"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/usuario"
        tools:ignore="TouchTargetSizeCheck,DuplicateSpeakableTextCheck" />

    <ImageView
        android:id="@+id/imglinhauser"
        android:layout_width="40dp"
        android:layout_height="3dp"
        android:contentDescription="@string/descLinha"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imguser"
        app:layout_constraintStart_toStartOf="@+id/imguser"
        app:srcCompat="@drawable/linhabranca" />

    <ImageButton
        android:id="@+id/btnhomeuser"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="15dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/descHome"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/home"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />



</androidx.constraintlayout.widget.ConstraintLayout>